root = true

# All file types
[*]

# Preferred characterset encoding
charset = utf-8

# Unix-style newlines with a newline ending the file
end_of_line = lf
insert_final_newline = true

# Trim possible trailing whitespace
trim_trailing_whitespace = true

# Insert final newline
insert_final_newline = true

[*.md]
indent_style = space
